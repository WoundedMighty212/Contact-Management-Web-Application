@model IEnumerable<Contact_Management_Web_Application.Models.Contact>

@{
    ViewData["Title"] = "Delete By Name";
}


<style>
    body {
        background-color: #333;
        color: #fff;
        font-family: Arial, sans-serif;
        padding: 20px;
    }

    h1 {
        color: #dc3545;
    }

    .table {
        background-color: #444; 
        color: #fff; 
    }

        .table th {
            background-color: #dc3545;
            color: #fff; 
        }

        .table td, .table th {
            border: 1px solid #dc3545; 
        }

        .table a {
            color: #dc3545; 
        }

            .table a:hover {
                color: #c82333; 
            }
</style>

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-controller="Contacts" asp-action="DeleteByNameCon" method="post" class="mb-3">
    <div class="input-group">
        <input type="text" name="name" class="form-control" placeholder="Enter contact's full name to delete" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
            </tr>
        }
    </tbody>
</table>
